.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %button.btn.btn-navbar{:"data-toggle"=>"collapse", :"data-target"=>".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .brand{:href=>"#Project name"} Mizzou ACM
      .nav-collapse.collapse
        %ul.nav
          =nav_link 'Home', root_path
          =nav_link 'Projects', '/projects'
          =nav_link 'Events', events_path
          =nav_link 'People', '/users'
          =nav_link 'Facebook', 'https://www.facebook.com/groups/MizzouACM/?fref=ts'
          =nav_link 'Join ACM', 'https://orgsync.com/47160/chapter'
        .pull-right
          %ul.nav
            - if user_signed_in?
              %li
                = link_to current_user, {:style=> 'padding: 0px;'} do
                  %img{:src=>current_user.gravatar_url, :id=>'nav-gravatar'}
              %li= link_to current_user.name, current_user
              %li= link_to 'Logout', signout_path
            - else
              = link_to 'Sign in with GitHub', signin_path, :class=>"btn btn-small btn-success"