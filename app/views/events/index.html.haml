%h1 Listing events

%table.table
  %tr
    %th Name
    %th Date
    %th Location
    %th Description
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.name
      %td= event.date
      %td= event.location
      %td= event.description
      %td= link_to 'Show', event, :class => 'btn'
      - if user_is_admin?
        %td= link_to 'Edit', edit_event_path(event), :class => 'btn'
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn'

%br

- if user_is_admin?
  = link_to 'New Event', new_event_path, :class => 'btn'
