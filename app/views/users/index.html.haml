#user-wrapper
  %h1 ACM Members
  =form_tag(:controller => "users", :action => "search") do
    .skill-filters
      -if @skills
        -@skills.each do |skill|
          %span.label.label-info.skill-filter
            %span= skill
            %span.close &times;
            = hidden_field_tag "skill[]", skill
    =select_tag "skill[]", options_for_select([["Filter by interests", nil]]+Skill.valid_skills.map { |e| [e[0], e[0]]}, @skill)
  - @users.each do |user|
    =link_to user do
      .user
        -if user.title
          .ribbon-wrapper-green
            .ribbon-green= user.title
        .top
          =image_tag user.gravatar_url, :class => 'gravatar'
          .skills
            -user.randomSkills(4).each do |skillImg|
              =image_tag 'skill_icons/'+skillImg, :class => 'skill'
        .bottom
          %h3= user.display_name