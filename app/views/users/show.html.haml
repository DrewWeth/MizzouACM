.row
  .transparent-region.span3
    - if user_is_current_user?
      =link_to "https://gravatar.com/emails" do
        %div{:rel=>"tooltip","data-placement"=>"right", :title=>"Change your picture at Gravatar.com", :style=>"display:inline-block"}
          .gravatar=image_tag @user.gravatar_url
    - else
      .gravatar=image_tag @user.gravatar_url
    %h3=@user.name
    %a{"href" => @user.github_url} View on GitHub
  .transparent-region.span3
    = render 'users/skills'
  -if not @repos.empty?
    .transparent-region.span3
      = render 'users/repos'